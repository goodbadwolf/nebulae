{
  "name": "@kiku/core",
  "version": "0.0.1",
  "description": "Core utilities and shared components for Nebulae tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "tests": "vitest",
    "tests:watch": "vitest --watch",
    "tests:coverage": "vitest --coverage --no-watch",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.16.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.20.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
