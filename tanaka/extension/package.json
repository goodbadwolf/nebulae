{
  "name": "@tanaka/extension",
  "version": "0.0.1",
  "description": "Firefox extension that synchronizes tabs across devices",
  "type": "module",
  "scripts": {
    "build:dev": "tsx scripts/dev.ts build --mode dev",
    "build:prod": "tsx scripts/dev.ts build --mode prod",
    "watch:dev": "tsx scripts/dev.ts watch --mode dev",
    "watch:prod": "tsx scripts/dev.ts watch --mode prod",
    "analyze:dev": "tsx scripts/dev.ts analyze --mode dev",
    "analyze:prod": "tsx scripts/dev.ts analyze --mode prod",
    "preview": "rspack serve --mode production",
    "start": "pnpm run build && web-ext run --source-dir dist",
    "start:firefox": "pnpm run build && web-ext run --source-dir dist --devtools --browser-console",
    "build:ext": "pnpm run build && web-ext build --source-dir dist",
    "lint": "web-ext lint --source-dir dist",
    "typecheck": "tsc --noEmit",
    "generate-icons": "node scripts/generate-icons.js",
    "tests": "echo 'No tests configured yet'"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@rspack/cli": "^1.4.8",
    "@rspack/core": "^1.4.8",
    "@rspack/plugin-react-refresh": "^1.4.3",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/webextension-polyfill": "^0.12.3",
    "cac": "^6.7.14",
    "copy-webpack-plugin": "^13.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "html-webpack-plugin": "^5.6.3",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "react-refresh": "^0.17.0",
    "sharp": "^0.34.3",
    "ts-checker-rspack-plugin": "^1.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "web-ext": "^8.8.0",
    "webextension-polyfill": "^0.12.0"
  }
}
