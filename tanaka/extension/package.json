{
  "name": "@tanaka/extension",
  "version": "0.0.1",
  "description": "Firefox extension that synchronizes tabs across devices",
  "type": "module",
  "scripts": {
    "playground": "rsbuild dev --mode dev",
    "pg": "pnpm run playground",
    "build:dev": "tsx scripts/dev.ts build --mode dev",
    "build:prod": "tsx scripts/dev.ts build --mode prod",
    "watch:dev": "tsx scripts/dev.ts watch --mode dev",
    "watch:prod": "tsx scripts/dev.ts watch --mode prod",
    "analyze:dev": "tsx scripts/dev.ts analyze --mode dev",
    "analyze:prod": "tsx scripts/dev.ts analyze --mode prod",
    "typecheck": "tsc --noEmit",
    "lint:ts": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.css\" --fix",
    "lint:ext": "web-ext lint --source-dir dist",
    "lint": "pnpm run lint:ts && pnpm run lint:css && pnpm run lint:ext",
    "generate-icons": "node scripts/generate-icons.js",
    "tests": "echo 'No tests configured yet'"
  },
  "dependencies": {
    "@kiku/core": "workspace:*",
    "@mantine/core": "^8.2.1",
    "@mantine/form": "^8.2.1",
    "@mantine/hooks": "^8.2.1",
    "@mantine/modals": "^8.2.1",
    "@mantine/notifications": "^8.2.1",
    "@mantine/nprogress": "^8.2.1",
    "@mantine/spotlight": "^8.2.1",
    "@phosphor-icons/react": "^2.1.10",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rsbuild/core": "^1.4.9",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rsbuild/plugin-sass": "^1.3.3",
    "@rsbuild/plugin-type-check": "^1.2.3",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webextension-polyfill": "^0.12.3",
    "cac": "^6.7.14",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "web-ext": "^8.9.0",
    "webextension-polyfill": "^0.12.0"
